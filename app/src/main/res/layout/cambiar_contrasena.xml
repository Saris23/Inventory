<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:text="Cambiar contrase침a"/>
    <EditText
        android:id="@+id/txtContraActual"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_card"
        android:inputType="textVisiblePassword"
        android:hint="Contrase침a actual"/>
    <EditText
        android:id="@+id/txtContraNueva"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_card"
        android:inputType="textVisiblePassword"
        android:hint="Contrase침a nueva"/>
    <!-- Bot칩n Actualizar -->
    <Button
        android:id="@+id/btnActContra"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Cambiar"
        android:fontFamily="@font/catamaran_semibold"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/naranja2"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>