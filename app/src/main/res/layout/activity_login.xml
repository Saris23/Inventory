<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:orientation="vertical">
    <!-- Titulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/amaranth_bold"
        android:textSize="70sp"
        android:textColor="@color/naranja2"
        android:text="InvenTory"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:fontFamily="@font/catamaran_regular"
        android:textColor="@color/naranja2"
        android:textSize="30sp"
        android:text="Inicia Sesi칩n"/>

    <!-- Formulario -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_regular"
            android:text="Gmail"/>
        <EditText
            android:id="@+id/txtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/archivo_regular"
            android:inputType="textEmailAddress"
            android:hint="Ingresa tu correo electronico"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_regular"
            android:text="Contrase침a"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle">
            <com.google.android.material.textfield.TextInputEditText
                android:background="@drawable/bg_card"
                android:id="@+id/txtContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contrase침a"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/txtRecuperarcontra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_gravity="right"
            android:fontFamily="@font/archivo_regular"
            android:text="Olvidaste tu contrase침a?"/>
    </LinearLayout>

    <!-- Boton -->
    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/naranja2"
        android:fontFamily="@font/archivo_bold"
        android:textSize="17sp"
        android:text="Ingresar"/>

    <!-- Link a registro -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_regular"
            android:text="Si aun no tienes una cuenta,"/>
        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/naranja1"
            android:fontFamily="@font/archivo_regular"
            android:backgroundTint="@color/vacio"
            android:padding="5dp"
            android:text="Registrate"/>
    </LinearLayout>

</LinearLayout>