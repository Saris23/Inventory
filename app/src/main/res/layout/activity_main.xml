<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@drawable/fondo_degradado2">

        <!-- Menu -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@color/vacio"
            android:src="@drawable/ic_menu" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="18dp"
            android:text="InvenTory"
            android:fontFamily="@font/amaranth_bold"
            android:textSize="43sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/degradado_mini"/>

    <!-- Titulo(saludo) -->
    <TextView
        android:id="@+id/txtSaludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola, *****"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:fontFamily="@font/catamaran_semibold"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/txtSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empieza tu día con las mejores ventas"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:fontFamily="@font/archivo_medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"/>

    <!-- Tarjeta de venta -->
    <LinearLayout
        android:id="@+id/cardVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bg_card"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Venta del día:"
            android:fontFamily="@font/archivo_bold"
            android:textSize="16sp"
            android:textColor="@color/naranja2"/>

        <TextView
            android:id="@+id/txtVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/naranja2"/>
    </LinearLayout>

    <!-- Tarjeta de fecha -->
    <LinearLayout
        android:id="@+id/layoutFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bg_card"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fecha:"
            android:fontFamily="@font/archivo_bold"
            android:textSize="16sp"
            android:textColor="@color/naranja1"/>

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00/00/00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/naranja1"/>
    </LinearLayout>


    <!-- Botón Iniciar Venta -->
    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Iniciar Venta"
        android:fontFamily="@font/catamaran_semibold"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/naranja1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="62dp"/>

    <!-- Botón Cerrar Venta -->
    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cerrar Venta"
        android:fontFamily="@font/catamaran_semibold"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

</LinearLayout>

