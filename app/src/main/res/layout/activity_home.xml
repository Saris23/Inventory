<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Home">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@drawable/fondo_degradado">

        <!-- Menu -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@color/vacio"
            android:src="@drawable/ic_menu" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="18dp"
            android:text="InvenTory"
            android:fontFamily="@font/amaranth_bold"
            android:textSize="43sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!-- Titulo(saludo) -->
    <TextView
        android:id="@+id/txtSaludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola, *****"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:fontFamily="@font/catamaran_semibold"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/txtSub"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Empieza tu día con las mejores ventas"
        android:textColor="@color/gris_medio"
        android:textSize="14sp"
        android:fontFamily="@font/archivo_medium"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"/>


    <LinearLayout
        android:layout_width="370dp"
        android:layout_gravity="center"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txtSubHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quienes somos?"
        android:textColor="@color/purple"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/archivo_medium"

        android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtsub3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Somos un equipo que busca facilitar la forma en que gestionas y organizas tu negocio. Nuestra app está pensada para brindarte herramientas simples, rápidas y efectivas que te ayuden a mantener el control de tus productos, tus ventas y tu crecimiento. Creemos en la tecnología al servicio de las personas y en hacer que cada tarea sea más fácil y eficiente."
            android:textColor="@color/gris_medio"
            android:orientation="vertical"
            android:textSize="13sp"
            android:fontFamily="@font/archivo_regular"
            android:layout_marginTop="10dp" />





    </LinearLayout>

</LinearLayout>
