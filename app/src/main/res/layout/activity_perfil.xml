<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".perfil">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@color/naranja2">

        <!-- Menu -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:backgroundTint="@color/vacio"
            android:src="@drawable/ic_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="63dp"
            android:layout_marginTop="18dp"
            android:text="InvenTory"
            android:fontFamily="@font/amaranth_bold"
            android:textSize="43sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <!-- Título Perfil -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amaranth_bold"
        android:textSize="43sp"
        android:textColor="@color/black"
        android:text="Perfil"/>

    <!-- Titulo1 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Datos del perfil"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:textStyle="bold"
        android:fontFamily="@font/archivo_variablefont_wdth_wght"
        android:textSize="17sp"

        />


    <!-- Formulario usuario -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="7dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Nombre:"/>

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Gmail:"/>
        <EditText
            android:id="@+id/etGmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card" />

    </LinearLayout>

    <!-- Titulo2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Datos del negocio"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="45dp"
        android:textSize="17sp"
        android:fontFamily="@font/archivo_variablefont_wdth_wght"
        android:textStyle="bold"/>


    <!-- Formulario Negocio -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="7dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Nombre del negocio:"/>

        <EditText
            android:id="@+id/etNombreNegocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Descripción:"/>
        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/bg_card" />

    </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_height="50dp"
            android:text="Guardar"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/naranja2"
            />




</LinearLayout>