<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_gravity="center"
        android:background="@drawable/fondo_degradado2"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/catamaran_regular"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:text="Crea una cuenta nueva"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_light"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Unete a nosotros y maneja tu negocio"/>
    </LinearLayout>

    <!-- Formulario registro-->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_regular"
            android:text="Nombre"/>
        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="20dp"
            android:inputType="textPersonName"
            android:fontFamily="@font/archivo_regular"
            android:hint="Ingresa tu nombre"/>

        <!-- Apartado de documento -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_regular"
            android:text="Documento"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/txtDocument"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/bg_card"
                android:fontFamily="@font/archivo_regular"
                android:hint="Documento"/>
            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spDocument"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|right"
                android:background="@drawable/bg_card"/>
        </LinearLayout>

        <!-- Campos de txt -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_regular"
            android:text="Gmail"/>
        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="20dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/archivo_regular"
            android:hint="Ingresa tu correo electronico"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_regular"
            android:text="Contraseña"/>
        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/archivo_regular"
            android:inputType="textVisiblePassword"
            android:hint="Crea una contraseña"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/archivo_regular"
            android:text="Confirmar contraseña"/>
        <EditText
            android:id="@+id/txtConfirmpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:fontFamily="@font/archivo_regular"
            android:inputType="textVisiblePassword"
            android:hint="Confirma tu contraseña"/>
    </LinearLayout>

    <!-- Boton -->
    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/naranja1"
        android:fontFamily="@font/archivo_bold"
        android:textSize="17sp"
        android:text="Registrar"/>

    <!-- Link a registro -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_regular"
            android:text="Ya te registraste?"/>
        <Button
            android:id="@+id/txtInicioS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/vacio"
            android:padding="5dp"
            android:textColor="@color/naranja2"
            android:fontFamily="@font/archivo_regular"
            android:text="Inicia sesión"/>
    </LinearLayout>

</LinearLayout>