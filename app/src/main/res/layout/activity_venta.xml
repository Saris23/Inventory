<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".venta">
    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnRegreso"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/vacio"
            android:src="@drawable/ic_left" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="18dp"
            android:text="Venta"
            android:fontFamily="@font/archivo_bold"
            android:textSize="32sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <!-- Lista de productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerVenta"
        android:layout_width="350dp"
        android:layout_height="310dp"
        android:background="@drawable/bg_card"
        android:padding="8dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="12dp"
        android:backgroundTintMode="src_in"
        tools:listitem="@layout/item_producto"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/etTotalVenta"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="225dp"
            android:background="@drawable/bg_card"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:text="Total: $000.0"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnScanVenta"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple"
        app:cornerRadius="11dp"
        android:layout_marginLeft="225dp"
        android:textSize="12sp"
        android:text="Agregar mÃ¡s"/>

    <!-- Total -->
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/gris_medio"
        android:layout_marginTop="20dp" />

    <!-- Cuanto de cambio -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="29dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="13sp"
        android:text="Con cuanto te pagan?"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/txtPago"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15sp"
            android:inputType="number"
            android:hint="10000"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/etCambio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="13sp"
            android:text="Cambio: $1000"/>
    </LinearLayout>

    <!-- Boton finalizar -->
    <Button
        android:id="@+id/btnFinalizarV"
        android:layout_width="172dp"
        android:layout_height="57dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:backgroundTint="@color/black"
        app:cornerRadius="11dp"
        android:textSize="12sp"
        android:text="Finalizar Venta"/>
</LinearLayout>
